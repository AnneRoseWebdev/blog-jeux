{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<style>
    body {
        background: url('https://i.pinimg.com/474x/e0/54/bd/e054bdcf455dbee8fef16b7a8d72b2e4.jpg') no-repeat center center fixed;
        background-size: cover;
    }

    .contact-overlay {
        background-color: rgba(51, 43, 17, 0.87); /* effet foncé */
        padding: 60px 0;
        min-height: 100vh;
    }

    .contact-form-card {
        background-color: #ffffffdd;
        border-radius: 12px;
    }

    label {
        font-weight: bold;
    }
</style>
<div class="container my-5" style="max-width: 700px;">
    <h1 class="text-center text-primary mb-4">📨 Contactez-nous</h1>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">{{ message }}</div>
    {% endfor %}

    <div class="card shadow-sm border-0 bg-light p-4">
        {{ form_start(form) }}

        <div class="mb-3">
            {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Votre nom'}}) }}
        </div>

        <div class="mb-3">
            {{ form_label(form.email, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.email, {'attr': {'class': 'form-control', 'placeholder': 'Votre adresse email'}}) }}
        </div>

        <div class="mb-4">
            {{ form_label(form.contenu, null, {'label_attr': {'class': 'form-label fw-semibold'}}) }}
            {{ form_widget(form.contenu, {'attr': {'class': 'form-control', 'placeholder': 'Votre message', 'rows': 5}}) }}
        </div>

        <div class="text-center">
            <button class="btn btn-primary btn-lg px-5">
                ✉️ Envoyer
            </button>
        </div>

        {{ form_end(form) }}
    </div>
</div>

<hr class="my-5">

<!-- INFORMATIONS PRATIQUES -->
<h2 class="text-center text-primary mb-4">📌 Informations pratiques</h2>

<div class="row text-center mb-5">
    <div class="col-md-4 mb-4">
        <div class="p-3 bg-light rounded shadow-sm">
            <h5>📍 Adresse</h5>
            <p>970 rue de la Bergeresse<br>45160 Olivet</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="p-3 bg-light rounded shadow-sm">
            <h5>📞 Téléphone</h5>
            <p>07 82 41 82 44</p>
        </div>
    </div>
    <div class="col-md-4 mb-4">
        <div class="p-3 bg-light rounded shadow-sm">
            <h5>🕒 Horaires</h5>
            <p>Lun - Ven : 9h - 18h<br>Sam : 10h - 14h</p>
        </div>
    </div>
</div>

<!-- GOOGLE MAP -->
<h2 class="text-center text-primary mt-5 mb-4">📍 Nous trouver</h2>

<div class="d-flex justify-content-center mb-5">
    <iframe
        src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2694.7964930512787!2d1.889195076252903!3d47.82703067127805!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47e4e7db89e6d277%3A0x9ea5c9e10f76cdee!2s970%20Rue%20de%20la%20Bergeresse%2C%2045160%20Olivet!5e0!3m2!1sfr!2sfr!4v1713547631759!5m2!1sfr!2sfr"
        width="600"
        height="450"
        style="border:0;"
        allowfullscreen=""
        loading="lazy"
        referrerpolicy="no-referrer-when-downgrade"
        class="rounded shadow"
    ></iframe>
</div>
{% endblock %}
